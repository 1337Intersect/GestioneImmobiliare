<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Light Theme Color Palette -->
	<SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
	<SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="PrimaryBrush" Color="#333333"/>
	<SolidColorBrush x:Key="AccentBrush" Color="#0066CC"/>
	<SolidColorBrush x:Key="TextPrimary" Color="#1A1A1A"/>
	<SolidColorBrush x:Key="TextSecondary" Color="#666666"/>
	<SolidColorBrush x:Key="TextMuted" Color="#999999"/>
	<SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
	<SolidColorBrush x:Key="HoverBrush" Color="#F5F5F5"/>

	<!-- Light Theme Specific Colors -->
	<SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="ToolbarBrush" Color="#F8F8F8"/>
	<SolidColorBrush x:Key="SidebarBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="CalendarCellBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="CalendarHeaderBrush" Color="#F8F8F8"/>
	<SolidColorBrush x:Key="InputBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="InputBorderBrush" Color="#E1DFDD"/>
	<SolidColorBrush x:Key="InputFocusBrush" Color="#0078D4"/>

	<!-- Status Colors -->
	<SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
	<SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
	<SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
	<SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>

	<!-- Appuntamento Status Colors - Light Theme -->
	<SolidColorBrush x:Key="AppuntamentoProgrammato" Color="#2196F3"/>
	<SolidColorBrush x:Key="AppuntamentoConfermato" Color="#4CAF50"/>
	<SolidColorBrush x:Key="AppuntamentoCompletato" Color="#9E9E9E"/>
	<SolidColorBrush x:Key="AppuntamentoAnnullato" Color="#F44336"/>

	<!-- Calendar Event Hover Effect - Light Theme -->
	<SolidColorBrush x:Key="EventHoverBrush" Color="#1976D2"/>
	<SolidColorBrush x:Key="EventHoverBorderBrush" Color="#FFFFFF"/>

	<!-- Light Theme Window Colors -->
	<SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F3F2F1"/>
	<SolidColorBrush x:Key="WindowBorderBrush" Color="#E1DFDD"/>

	<!-- Light Theme Button Colors -->
	<SolidColorBrush x:Key="ButtonPrimaryBrush" Color="#0078D4"/>
	<SolidColorBrush x:Key="ButtonPrimaryHoverBrush" Color="#106EBE"/>
	<SolidColorBrush x:Key="ButtonSecondaryBrush" Color="#F3F2F1"/>
	<SolidColorBrush x:Key="ButtonSecondaryHoverBrush" Color="#E1DFDD"/>

	<!-- Light Theme Data Grid Colors -->
	<SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="DataGridAlternateBrush" Color="#FAFAFA"/>
	<SolidColorBrush x:Key="DataGridHeaderBrush" Color="#F8F8F8"/>
	<SolidColorBrush x:Key="DataGridBorderBrush" Color="#E1DFDD"/>

	<!-- Light Theme List Colors -->
	<SolidColorBrush x:Key="ListItemBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="ListItemHoverBrush" Color="#F8F8F8"/>
	<SolidColorBrush x:Key="ListItemSelectedBrush" Color="#E3F2FD"/>

	<!-- Light Theme Shadow Effects -->
	<DropShadowEffect x:Key="LightCardShadow"
                      Color="#000000"
                      Opacity="0.1"
                      ShadowDepth="2"
                      BlurRadius="8"/>

	<DropShadowEffect x:Key="LightButtonShadow"
                      Color="#000000"
                      Opacity="0.2"
                      ShadowDepth="2"
                      BlurRadius="8"/>

	<!-- Light Theme Typography -->
	<FontFamily x:Key="PrimaryFontFamily">Segoe UI</FontFamily>
	<FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>

	<!-- Light Theme Icon Colors -->
	<SolidColorBrush x:Key="IconPrimaryBrush" Color="#323130"/>
	<SolidColorBrush x:Key="IconSecondaryBrush" Color="#605E5C"/>
	<SolidColorBrush x:Key="IconAccentBrush" Color="#0078D4"/>

	<!-- Light Theme Progress Colors -->
	<SolidColorBrush x:Key="ProgressBackgroundBrush" Color="#E1DFDD"/>
	<SolidColorBrush x:Key="ProgressForegroundBrush" Color="#0078D4"/>

	<!-- Light Theme Tooltip Colors -->
	<SolidColorBrush x:Key="TooltipBackgroundBrush" Color="#F3F2F1"/>
	<SolidColorBrush x:Key="TooltipBorderBrush" Color="#E1DFDD"/>
	<SolidColorBrush x:Key="TooltipTextBrush" Color="#323130"/>

	<!-- Light Theme Menu Colors -->
	<SolidColorBrush x:Key="MenuBackgroundBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="MenuBorderBrush" Color="#E1DFDD"/>
	<SolidColorBrush x:Key="MenuItemHoverBrush" Color="#F8F8F8"/>
	<SolidColorBrush x:Key="MenuSeparatorBrush" Color="#E1DFDD"/>

	<!-- Light Theme Scrollbar Colors -->
	<SolidColorBrush x:Key="ScrollbarTrackBrush" Color="#F3F2F1"/>
	<SolidColorBrush x:Key="ScrollbarThumbBrush" Color="#C8C6C4"/>
	<SolidColorBrush x:Key="ScrollbarThumbHoverBrush" Color="#A19F9D"/>

</ResourceDictionary>