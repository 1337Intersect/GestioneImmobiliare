<Window x:Class="ImmobiGestio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:ImmobiGestio.ViewModels"
        xmlns:views="clr-namespace:ImmobiGestio.Views"
        Title="{Binding WindowTitle}" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Data Templates -->
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView Style="{StaticResource AnimatedContentControl}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ImmobiliViewModel}">
            <views:ImmobiliView Style="{StaticResource AnimatedContentControl}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ClientiViewModel}">
            <views:ClientiView Style="{StaticResource AnimatedContentControl}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AppuntamentiViewModel}">
            <views:AppuntamentiView Style="{StaticResource AnimatedContentControl}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR MINIMAL -->
        <Border Grid.Column="0" 
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,1,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER MINIMAL -->
                <Border Grid.Row="0" 
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ImmobiGestio" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Gestione Immobiliare" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextMuted}" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- NAVIGATION MINIMAL -->
                <StackPanel Grid.Row="1" Margin="0,12,0,0">

                    <Button Content="Dashboard" 
                            Command="{Binding NavigateToDashboardCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDashboardActive}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Immobili" 
                            Command="{Binding NavigateToImmobiliCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsImmobiliActive}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Clienti" 
                            Command="{Binding NavigateToClientiCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsClientiActive}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Appuntamenti" 
                            Command="{Binding NavigateToAppuntamentiCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAppuntamentiActive}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- SEPARATOR -->
                    <Border Height="1" 
                            Background="{StaticResource BorderBrush}" 
                            Margin="16,16"/>

                    <!-- QUICK ACTIONS -->
                    <TextBlock Text="Azioni Rapide" 
                               Style="{StaticResource Caption}" 
                               Margin="20,0,0,8"/>

                    <Button Content="+ Nuovo Immobile" 
                            Command="{Binding QuickAddImmobileCommand}"
                            Style="{StaticResource SidebarButtonStyle}"/>

                    <Button Content="+ Nuovo Cliente" 
                            Command="{Binding QuickAddClienteCommand}"
                            Style="{StaticResource SidebarButtonStyle}"/>

                    <Button Content="+ Nuovo Appuntamento" 
                            Command="{Binding QuickAddAppuntamentoCommand}"
                            Style="{StaticResource SidebarButtonStyle}"/>

                </StackPanel>

                <!-- FOOTER STATUS -->
                <Border Grid.Row="2" 
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="16,12">
                    <StackPanel>
                        <TextBlock Text="Sistema Online" 
                                   FontSize="11" 
                                   Foreground="#4CAF50" 
                                   FontWeight="Medium"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="10" 
                                   Foreground="{StaticResource TextMuted}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER BAR -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,0,0,1"
                    Height="60">

                <Grid Margin="24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- PAGE TITLE -->
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentView}" 
                                   FontSize="20" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource TextPrimary}"/>
                    </StackPanel>

                    <!-- TOOLBAR -->
                    <StackPanel Grid.Column="1" 
                              Orientation="Horizontal" 
                              VerticalAlignment="Center">

                        <Button Content="Aggiorna" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource SidebarButtonStyle}"
                                Width="80" Height="32" 
                                Margin="0,0,8,0"/>

                        <Button Content="Menu" 
                                Command="{Binding SettingsCommand}"
                                Style="{StaticResource SidebarButtonStyle}"
                                Width="60" Height="32"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Border Grid.Row="1" 
                    Background="{StaticResource BackgroundBrush}"
                    Padding="24">
                <ContentControl Content="{Binding CurrentViewModel}" 
                              Style="{StaticResource AnimatedContentControl}"/>
            </Border>
        </Grid>
    </Grid>
</Window>