<UserControl x:Class="ImmobiGestio.Views.ClientiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MODERN HEADER BAR -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="24,16" 
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Search -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestione Clienti" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource BackgroundBrush}" 
                                CornerRadius="8" 
                                Padding="12,8"
                                Width="300">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE721;" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          FontSize="14" 
                                          Foreground="{StaticResource TextMutedBrush}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        VerticalAlignment="Center"
                                        Width="250"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="{Binding Clienti.Count, StringFormat='{}{0} clienti'}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextMutedBrush}"
                                  VerticalAlignment="Center"
                                  Margin="16,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Nuovo Cliente" 
                            Command="{Binding AddClienteCommand}"
                            Style="{StaticResource ModernButtonPrimary}"
                            Margin="0,0,8,0"/>
                    <Button Content="Salva Modifiche" 
                            Command="{Binding SaveClienteCommand}"
                            Background="{StaticResource SuccessBrush}"
                            Style="{StaticResource ModernButtonPrimary}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CLIENTS LIST -->
            <Border Grid.Column="0" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Lista Clienti" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"
                               Foreground="{StaticResource TextPrimaryBrush}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Clienti}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundBrush}"
                                            CornerRadius="8"
                                            Margin="0,0,0,8"
                                            Padding="16,12"
                                            Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding Gesture="LeftClick" 
                                                         Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.SelectClienteCommand}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Client Avatar -->
                                            <Border Grid.Column="0" 
                                                    Background="{StaticResource PrimaryLightBrush}"
                                                    CornerRadius="20"
                                                    Width="40" Height="40"
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="&#xE77B;" 
                                                          FontFamily="Segoe MDL2 Assets" 
                                                          FontSize="20"
                                                          Foreground="{StaticResource PrimaryBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Client Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding NomeCompleto}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="14"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding Email}" 
                                                           FontSize="12" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="{StaticResource SuccessLightBrush}" 
                                                            CornerRadius="4" 
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding TipoCliente}" 
                                                                   FontSize="10" 
                                                                   FontWeight="Medium"
                                                                   Foreground="{StaticResource SuccessBrush}"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Status Indicator -->
                                            <Ellipse Grid.Column="2" 
                                                     Width="8" Height="8"
                                                     Fill="{StaticResource SuccessBrush}"
                                                     VerticalAlignment="Top"
                                                     Margin="0,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- CLIENT DETAILS -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedCliente}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border Background="{StaticResource BackgroundBrush}"
                                CornerRadius="50"
                                Width="100" Height="100"
                                Margin="0,0,0,24">
                            <TextBlock Text="&#xE77B;" 
                                      FontFamily="Segoe MDL2 Assets" 
                                      FontSize="48"
                                      Foreground="{StaticResource TextMutedBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Seleziona un cliente" 
                                   FontSize="18" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Clicca su un cliente dalla lista per visualizzarne i dettagli" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Client Details Form -->
                    <StackPanel DataContext="{Binding SelectedCliente}">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <!-- Client Header -->
                        <Border Style="{StaticResource ContentCardStyle}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="{StaticResource PrimaryLightBrush}"
                                        CornerRadius="30"
                                        Width="60" Height="60"
                                        Margin="0,0,16,0">
                                    <TextBlock Text="&#xE77B;" 
                                              FontFamily="Segoe MDL2 Assets" 
                                              FontSize="30"
                                              Foreground="{StaticResource PrimaryBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding NomeCompleto}" 
                                               FontSize="20" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Email}" 
                                               FontSize="14" 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding DataInserimento, StringFormat='Cliente dal {0:dd/MM/yyyy}'}" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="&#xE715;" 
                                            ToolTip="Invia Email"
                                            FontFamily="Segoe MDL2 Assets"
                                            Style="{StaticResource ModernButtonPrimary}"
                                            Background="{StaticResource PurpleBrush}"
                                            Width="40" Height="40"
                                            Margin="0,0,8,0"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.InviaEmailCommand}"/>
                                    <Button Content="&#xE717;" 
                                            ToolTip="Chiama Cliente"
                                            FontFamily="Segoe MDL2 Assets"
                                            Style="{StaticResource ModernButtonPrimary}"
                                            Background="{StaticResource SuccessBrush}"
                                            Width="40" Height="40"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ChiamaClienteCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Basic Information -->
                        <Border Style="{StaticResource ContentCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Informazioni Personali" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 1 -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="Nome" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Cognome" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Cognome, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <!-- Row 2 -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,8,0">
                                        <TextBlock Text="Email" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,12,0,0">
                                        <TextBlock Text="Telefono" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <!-- Row 3 - WPF COMPATIBLE COMBOBOXES -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,12,8,0">
                                        <TextBlock Text="Tipo Cliente" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.TipiCliente}"
                                                  SelectedItem="{Binding TipoCliente, Mode=TwoWay}"
                                                  Padding="12,8"
                                                  BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,12,0,0">
                                        <TextBlock Text="Stato" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.StatiCliente}"
                                                  SelectedItem="{Binding StatoCliente, Mode=TwoWay}"
                                                  Padding="12,8"
                                                  BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Budget and Preferences -->
                        <Border Style="{StaticResource ContentCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Budget e Preferenze" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="Budget Minimo (€)" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding BudgetMin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N0}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Budget Massimo (€)" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding BudgetMax, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=N0}"
                                                 Padding="12,8"
                                                 BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,12,0,0">
                                    <TextBlock Text="Zone Preferite" 
                                               FontSize="12" 
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding PreferenzeZone, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                             Padding="12,8"
                                             BorderBrush="{StaticResource DividerBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Notes -->
                        <Border Style="{StaticResource ContentCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Note" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,16"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Height="100" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="12,8"
                                         BorderBrush="{StaticResource DividerBrush}"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>