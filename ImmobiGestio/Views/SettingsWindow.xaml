<Window x:Class="ImmobiGestio.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ImmobiGestio.Converters"
        Title="Impostazioni - ImmobiGestio" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}"
        Icon="{x:Null}">

    <Window.Resources>
        <converters:NumericStringConverter x:Key="NumericConverter"/>

        <!-- Stile per i tab buttons -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stile per tab button attivo -->
        <Style x:Key="TabButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Stile per le sezioni -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Stile per le label -->
        <Style x:Key="SettingsLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Stile per i controlli -->
        <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MinimalTextBox}">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="SettingsComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MinimalComboBox}">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Stile per i gruppi -->
        <Style x:Key="SettingsGroupStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="CATEGORIE" FontSize="11" FontWeight="Bold" 
                               Foreground="{StaticResource TextMuted}" Margin="20,0,0,12"/>

                    <Button Content="⚙️ Generale" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Generale">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Generale">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="📁 Percorsi" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Percorsi">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Percorsi">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="📄 File" 
                            Command="{Binding SelectTabCommand}" CommandParameter="File">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="File">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="💾 Backup" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Backup">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Backup">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="📧 Email" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Email">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Email">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="📅 Outlook" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Outlook">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Outlook">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="📋 Logging" 
                            Command="{Binding SelectTabCommand}" CommandParameter="Logging">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Logging">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Separator -->
                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="20,20,20,16"/>

                    <!-- Quick Actions -->
                    <Button Content="🔄 Reset Default" 
                            Command="{Binding ResetToDefaultCommand}"
                            Style="{StaticResource TabButtonStyle}"
                            Foreground="#D83B01"/>

                    <Button Content="📤 Esporta" 
                            Command="{Binding ExportSettingsCommand}"
                            Style="{StaticResource TabButtonStyle}"/>

                    <Button Content="📥 Importa" 
                            Command="{Binding ImportSettingsCommand}"
                            Style="{StaticResource TabButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Separator -->
            <Border Grid.Column="1" Background="{StaticResource BorderBrush}"/>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Padding="24">

                <!-- Tab: Generale -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="Generale">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Impostazioni Generali" Style="{StaticResource H2}"/>

                    <GroupBox Header="Informazioni Applicazione" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome Applicazione:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.ApplicationName, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Versione:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.ApplicationVersion, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}" IsReadOnly="True" Background="#F5F5F5"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Intervalli Automatici" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Salvataggio Automatico:" Style="{StaticResource SettingsLabelStyle}"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding AutoSaveIntervals}"
                                      SelectedItem="{Binding Settings.AutoSaveInterval, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBoxStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Settings.AutoSaveIntervalFormatted}" 
                                       Style="{StaticResource SettingsLabelStyle}" Foreground="{StaticResource TextMuted}" FontSize="11"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Aggiornamento Status:" Style="{StaticResource SettingsLabelStyle}"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                      ItemsSource="{Binding RefreshIntervals}"
                                      SelectedItem="{Binding Settings.StatusRefreshInterval, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBoxStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Settings.StatusRefreshIntervalFormatted}" 
                                       Style="{StaticResource SettingsLabelStyle}" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Tab: Percorsi -->
				<StackPanel>
					<StackPanel.Style>
						<Style TargetType="StackPanel">
							<Setter Property="Visibility" Value="Collapsed"/>
							<Style.Triggers>
								<DataTrigger Binding="{Binding SelectedTab}" Value="Percorsi">
									<Setter Property="Visibility" Value="Visible"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</StackPanel.Style>

					<TextBlock Text="Configurazione Percorsi" Style="{StaticResource H2}"/>

					<GroupBox Header="Cartelle di Sistema" Style="{StaticResource SettingsGroupStyle}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="120"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="Documenti:" Style="{StaticResource SettingsLabelStyle}"/>
							<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.DocumentsPath, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>
							<Button Grid.Row="0" Grid.Column="2" Content="📁" Width="32" Height="32"
                                    Command="{Binding BrowseDocumentsPathCommand}"
                                    Style="{StaticResource MinimalButton}" Margin="8,0,0,12"/>

							<TextBlock Grid.Row="1" Grid.Column="0" Text="Foto:" Style="{StaticResource SettingsLabelStyle}"/>
							<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.PhotosPath, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>
							<Button Grid.Row="1" Grid.Column="2" Content="📁" Width="32" Height="32"
                                    Command="{Binding BrowsePhotosPathCommand}"
                                    Style="{StaticResource MinimalButton}" Margin="8,0,0,12"/>

							<TextBlock Grid.Row="2" Grid.Column="0" Text="Backup:" Style="{StaticResource SettingsLabelStyle}"/>
							<TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.BackupPath, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>
							<Button Grid.Row="2" Grid.Column="2" Content="📁" Width="32" Height="32"
                                    Command="{Binding BrowseBackupPathCommand}"
                                    Style="{StaticResource MinimalButton}" Margin="8,0,0,12"/>
						</Grid>
					</GroupBox>
				</StackPanel>

                <!-- Tab: File -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="File">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Gestione File" Style="{StaticResource H2}"/>

                    <GroupBox Header="Dimensioni Massime" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Documenti:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.MaxDocumentSize, Mode=TwoWay, Converter={StaticResource NumericConverter}}" Style="{StaticResource SettingsTextBoxStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Settings.MaxDocumentSizeFormatted}" 
                                       Style="{StaticResource SettingsLabelStyle}" Foreground="{StaticResource TextMuted}" FontSize="11"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Foto:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.MaxPhotoSize, Mode=TwoWay, Converter={StaticResource NumericConverter}}" Style="{StaticResource SettingsTextBoxStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Settings.MaxPhotoSizeFormatted}" 
                                       Style="{StaticResource SettingsLabelStyle}" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Formati Supportati" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Documenti:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.SupportedDocumentFormats, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Immagini:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.SupportedImageFormats, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Tab: Backup -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="Backup">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Configurazione Backup" Style="{StaticResource H2}"/>

                    <GroupBox Header="Backup Automatico" Style="{StaticResource SettingsGroupStyle}">
                        <StackPanel>
                            <CheckBox Content="Abilita backup automatico" 
                                      IsChecked="{Binding Settings.AutoBackupEnabled, Mode=TwoWay}"
                                      Style="{StaticResource SettingsCheckBoxStyle}"/>

                            <Grid IsEnabled="{Binding Settings.AutoBackupEnabled}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Frequenza backup (giorni):" Style="{StaticResource SettingsLabelStyle}"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" 
                                          ItemsSource="{Binding BackupDays}"
                                          SelectedItem="{Binding Settings.AutoBackupDays, Mode=TwoWay}"
                                          Style="{StaticResource SettingsComboBoxStyle}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Massimo file backup:" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.MaxBackupFiles, Mode=TwoWay, Converter={StaticResource NumericConverter}}" Style="{StaticResource SettingsTextBoxStyle}"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Tab: Email -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="Email">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Configurazione Email" Style="{StaticResource H2}"/>

                    <GroupBox Header="Server SMTP" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Server SMTP:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.SMTPServer, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}" Margin="0,0,8,12"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Porta:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.SMTPPort, Mode=TwoWay, Converter={StaticResource NumericConverter}}" Style="{StaticResource SettingsTextBoxStyle}" Margin="0,0,8,12"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Username:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.SMTPUsername, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}" Margin="0,0,8,12"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Password:" Style="{StaticResource SettingsLabelStyle}"/>
                            <PasswordBox Grid.Row="3" Grid.Column="1" Style="{StaticResource SettingsTextBoxStyle}" Margin="0,0,8,12"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Email mittente:" Style="{StaticResource SettingsLabelStyle}"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Settings.EmailFrom, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}" Margin="0,0,8,12"/>

                            <Button Grid.Row="5" Grid.Column="1" Content="🔍 Testa Connessione" 
                                    Command="{Binding TestEmailConnectionCommand}"
                                    Style="{StaticResource MinimalButton}"
                                    HorizontalAlignment="Left"
                                    Margin="0,8,0,0"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Tab: Outlook -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="Outlook">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Integrazione Outlook" Style="{StaticResource H2}"/>

                    <GroupBox Header="Sincronizzazione Outlook" Style="{StaticResource SettingsGroupStyle}">
                        <StackPanel>
                            <CheckBox Content="Abilita integrazione con Microsoft Outlook" 
                                      IsChecked="{Binding Settings.OutlookIntegrationEnabled, Mode=TwoWay}"
                                      Style="{StaticResource SettingsCheckBoxStyle}"/>

                            <Grid IsEnabled="{Binding Settings.OutlookIntegrationEnabled}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Intervallo sincronizzazione:" Style="{StaticResource SettingsLabelStyle}"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" 
                                          ItemsSource="{Binding SyncIntervals}"
                                          SelectedItem="{Binding Settings.OutlookSyncInterval, Mode=TwoWay}"
                                          Style="{StaticResource SettingsComboBoxStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Settings.OutlookSyncIntervalFormatted}" 
                                           Style="{StaticResource SettingsLabelStyle}" Foreground="{StaticResource TextMuted}" FontSize="11"/>

                                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="🔍 Testa Connessione Outlook" 
                                        Command="{Binding TestOutlookConnectionCommand}"
                                        Style="{StaticResource MinimalButton}"
                                        HorizontalAlignment="Left"
                                        Margin="0,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Tab: Logging -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="Logging">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Configurazione Logging" Style="{StaticResource H2}"/>

                    <GroupBox Header="Sistema di Log" Style="{StaticResource SettingsGroupStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Livello Log:" Style="{StaticResource SettingsLabelStyle}"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" 
                                      ItemsSource="{Binding LogLevels}"
                                      SelectedItem="{Binding Settings.LogLevel, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBoxStyle}" Margin="0,0,8,12"/>

                            <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Content="Salva log su file" 
                                      IsChecked="{Binding Settings.LogToFile, Mode=TwoWay}"
                                      Style="{StaticResource SettingsCheckBoxStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Percorso file log:" Style="{StaticResource SettingsLabelStyle}"
                                       IsEnabled="{Binding Settings.LogToFile}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.LogFilePath, Mode=TwoWay}" Style="{StaticResource SettingsTextBoxStyle}"
                                     IsEnabled="{Binding Settings.LogToFile}"/>
                            <Button Grid.Row="2" Grid.Column="2" Content="📁" Width="32" Height="32" 
                                    Command="{Binding BrowseLogFilePathCommand}"
                                    Style="{StaticResource MinimalButton}" Margin="8,0,0,12"
                                    IsEnabled="{Binding Settings.LogToFile}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Massimo file log:" Style="{StaticResource SettingsLabelStyle}"
                                       IsEnabled="{Binding Settings.LogToFile}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Settings.MaxLogFiles, Mode=TwoWay, Converter={StaticResource NumericConverter}}" Style="{StaticResource SettingsTextBoxStyle}"
                                     IsEnabled="{Binding Settings.LogToFile}" Margin="0,0,8,12"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

            </ScrollViewer>
        </Grid>

        <!-- Footer Buttons -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Change Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="#FF9800" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="Ci sono modifiche non salvate" FontSize="12" Foreground="#FF9800">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Annulla" 
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MinimalButton}"
                            Background="Transparent"
                            Foreground="{StaticResource TextSecondary}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,12,0"/>

                    <Button Content="💾 Salva Impostazioni" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MinimalButton}"
                            IsDefault="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>