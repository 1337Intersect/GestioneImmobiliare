<UserControl x:Class="ImmobiGestio.Views.AppuntamentiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MODERN HEADER BAR -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                Padding="24,16" 
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Date -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Gestione Appuntamenti" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE787;" 
                                  FontFamily="Segoe MDL2 Assets" 
                                  FontSize="14" 
                                  Foreground="{StaticResource PrimaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedDate, StringFormat='MMMM yyyy'}" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Button Content="&#xE76B;" 
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="Mese Precedente"
                                Command="{Binding PreviousMonthCommand}"
                                Style="{StaticResource SidebarButtonStyle}"
                                Width="32" Height="32"
                                Margin="16,0,4,0"/>
                        <Button Content="&#xE76C;" 
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="Mese Successivo"
                                Command="{Binding NextMonthCommand}"
                                Style="{StaticResource SidebarButtonStyle}"
                                Width="32" Height="32"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ToggleButton Content="Lista" 
                                  IsChecked="{Binding IsListView}"
                                  Padding="12,8"
                                  Margin="0,0,8,0"/>
                    <ToggleButton Content="Calendario" 
                                  IsChecked="{Binding IsCalendarView}"
                                  Padding="12,8"
                                  Margin="0,0,16,0"/>
                    <Button Content="Nuovo Appuntamento" 
                            Command="{Binding AddAppuntamentoCommand}"
                            Style="{StaticResource ModernButtonPrimary}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- CALENDAR/LIST VIEW -->
            <Border Grid.Column="0" Style="{StaticResource ContentCardStyle}">
                <Grid>
                    <!-- CALENDAR VIEW -->
                    <Grid Visibility="{Binding IsCalendarView, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Calendar Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource BackgroundBrush}"
                                Padding="0,12"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Lun" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" Text="Mar" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="2" Text="Mer" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="3" Text="Gio" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="4" Text="Ven" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="5" Text="Sab" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="6" Text="Dom" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Calendar Grid -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding CalendarDays}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="7" Rows="6"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2" 
                                            Background="Transparent"
                                            MinHeight="80"
                                            BorderBrush="{StaticResource DividerBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Day Number -->
                                            <TextBlock Grid.Row="0" 
                                                       Text="{Binding DayNumber}" 
                                                       FontSize="14" 
                                                       FontWeight="Medium"
                                                       HorizontalAlignment="Left"
                                                       Margin="8,4,0,0"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                                            <!-- Appointments -->
                                            <ItemsControl Grid.Row="1" 
                                                          ItemsSource="{Binding Eventi}"
                                                          Margin="4,0,4,4">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{StaticResource WarningBrush}"
                                                                CornerRadius="3"
                                                                Margin="0,1"
                                                                Padding="4,2"
                                                                Cursor="Hand">
                                                            <Border.InputBindings>
                                                                <MouseBinding Gesture="LeftClick" 
                                                                             Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.SelectAppuntamentoCommand}"
                                                                             CommandParameter="{Binding}"/>
                                                            </Border.InputBindings>
                                                            <TextBlock Text="{Binding Titolo}" 
                                                                       FontSize="10" 
                                                                       Foreground="White"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <!-- LIST VIEW -->
                    <ScrollViewer Visibility="{Binding IsListView, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Prossimi Appuntamenti" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,16"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>

                            <ItemsControl ItemsSource="{Binding Appuntamenti}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}"
                                                CornerRadius="8"
                                                Margin="0,0,0,12"
                                                Padding="16"
                                                Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick" 
                                                             Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.SelectAppuntamentoCommand}"
                                                             CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Time -->
                                                <Border Grid.Column="0" 
                                                        Background="{StaticResource WarningLightBrush}"
                                                        CornerRadius="8"
                                                        Padding="12,8"
                                                        Margin="0,0,16,0">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding DataOra, StringFormat='{}{0:dd}'}" 
                                                                   FontSize="18" 
                                                                   FontWeight="Bold"
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{StaticResource WarningBrush}"/>
                                                        <TextBlock Text="{Binding DataOra, StringFormat='{}{0:MMM}'}" 
                                                                   FontSize="10" 
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                                        <TextBlock Text="{Binding DataOra, StringFormat='{}{0:HH:mm}'}" 
                                                                   FontSize="12" 
                                                                   FontWeight="Medium"
                                                                   HorizontalAlignment="Center"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- Appointment Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Titolo}" 
                                                               FontSize="16" 
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding ClienteNome}" 
                                                               FontSize="13" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding ImmobileTitolo}" 
                                                               FontSize="12" 
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- Status -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <Border Background="{StaticResource SuccessLightBrush}" 
                                                            CornerRadius="4" 
                                                            Padding="8,4">
                                                        <TextBlock Text="{Binding StatoAppuntamento}" 
                                                                   FontSize="11" 
                                                                   FontWeight="Medium"
                                                                   Foreground="{StaticResource SuccessBrush}"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- APPOINTMENT DETAILS -->
            <Border Grid.Column="2" Style="{StaticResource ContentCardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <!-- Empty State -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedAppuntamento}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Border Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="50"
                                    Width="80" Height="80"
                                    Margin="0,0,0,16">
                                <TextBlock Text="&#xE787;" 
                                          FontFamily="Segoe MDL2 Assets" 
                                          FontSize="36"
                                          Foreground="{StaticResource TextMutedBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nessun appuntamento selezionato" 
                                       FontSize="16" 
                                       FontWeight="Medium"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <!-- Appointment Details Form -->
                        <StackPanel DataContext="{Binding SelectedAppuntamento}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Header -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Dettagli Appuntamento" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,16"/>

                                <Border Background="{StaticResource WarningLightBrush}"
                                    CornerRadius="8"
                                    Padding="16,12"
                                    Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DataOra, StringFormat='{}{0:dddd, dd MMMM yyyy}'}" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding DataOra, StringFormat='{}{0:HH:mm}'}" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource WarningBrush}"
                                               Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Form Fields -->
                            <StackPanel>
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Titolo" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Titolo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Padding="12,8"
                                         BorderBrush="{StaticResource DividerBrush}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Cliente" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ClientiDisponibili}"
                                          SelectedValue="{Binding ClienteId, Mode=TwoWay}"
                                          DisplayMemberPath="NomeCompleto"
                                          SelectedValuePath="Id"
                                          Padding="12,8"
                                          BorderBrush="{StaticResource DividerBrush}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Immobile" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ImmobiliDisponibili}"
                                          SelectedValue="{Binding ImmobileId, Mode=TwoWay}"
                                          DisplayMemberPath="Titolo"
                                          SelectedValuePath="Id"
                                          Padding="12,8"
                                          BorderBrush="{StaticResource DividerBrush}"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="Tipo" 
                                               FontSize="12" 
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.TipiAppuntamento}"
                                              SelectedItem="{Binding TipoAppuntamento, Mode=TwoWay}"
                                              Padding="12,8"
                                              BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Stato" 
                                               FontSize="12" 
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,4"/>
                                        <ComboBox ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.StatiAppuntamento}"
                                              SelectedItem="{Binding StatoAppuntamento, Mode=TwoWay}"
                                              Padding="12,8"
                                              BorderBrush="{StaticResource DividerBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Note" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Height="80" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="12,8"
                                         BorderBrush="{StaticResource DividerBrush}"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Salva" 
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.SaveAppuntamentoCommand}"
                                        Style="{StaticResource ModernButtonPrimary}"
                                        Margin="0,0,8,0"/>
                                    <Button Content="Elimina" 
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeleteAppuntamentoCommand}"
                                        Background="{StaticResource ErrorBrush}"
                                        Style="{StaticResource ModernButtonPrimary}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>