<UserControl x:Class="ImmobiGestio.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Padding="0" 
                  Background="{StaticResource BackgroundBrush}">
        <StackPanel Margin="0,0,0,40">

            <!-- HEADER SECTION -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    Padding="32,24" 
                    Margin="0,0,0,24"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Dashboard" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Panoramica delle tue attività immobiliari" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- STATISTICHE PRINCIPALI -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="📊 Statistiche Principali" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="16,0,0,16"
                           Foreground="{StaticResource TextPrimaryBrush}"/>

                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- IMMOBILI CARD -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardProperties}">
                        <StackPanel>
                            <Border Style="{StaticResource StatIconContainerProperties}">
                                <TextBlock Style="{StaticResource StatIconProperties}"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.TotaleImmobili, Mode=OneWay}" 
                                       Style="{StaticResource StatNumberStyle}"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="Immobili Totali" 
                                       Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{Binding Statistiche.ImmobiliDisponibili, StringFormat='{}{0} Disponibili', Mode=OneWay}" 
                                       Style="{StaticResource StatSubtitleStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- CLIENTI CARD -->
                    <Border Grid.Column="1" Style="{StaticResource StatCardClients}">
                        <StackPanel>
                            <Border Style="{StaticResource StatIconContainerClients}">
                                <TextBlock Style="{StaticResource StatIconClients}"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.TotaleClienti, Mode=OneWay}" 
                                       Style="{StaticResource StatNumberStyle}"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="Clienti Totali" 
                                       Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{Binding Statistiche.ClientiAttivi, StringFormat='{}{0} Attivi', Mode=OneWay}" 
                                       Style="{StaticResource StatSubtitleStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- APPUNTAMENTI CARD -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardAppointments}">
                        <StackPanel>
                            <Border Style="{StaticResource StatIconContainerAppointments}">
                                <TextBlock Style="{StaticResource StatIconAppointments}"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.AppuntamentiOggi, Mode=OneWay}" 
                                       Style="{StaticResource StatNumberStyle}"
                                       Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Text="Appuntamenti Oggi" 
                                       Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{Binding Statistiche.AppuntamentiSettimana, StringFormat='{}{0} Questa Settimana', Mode=OneWay}" 
                                       Style="{StaticResource StatSubtitleStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- VALORE PORTFOLIO CARD -->
                    <Border Grid.Column="3" Style="{StaticResource StatCardRevenue}">
                        <StackPanel>
                            <Border Style="{StaticResource StatIconContainerRevenue}">
                                <TextBlock Style="{StaticResource StatIconRevenue}"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.ValorePortfolio, StringFormat='€{0:N0}', Mode=OneWay}" 
                                       Style="{StaticResource StatNumberStyle}"
                                       Foreground="{StaticResource PurpleBrush}"/>
                            <TextBlock Text="Valore Portfolio" 
                                       Style="{StaticResource StatLabelStyle}"/>
                            <TextBlock Text="{Binding Statistiche.ValoreVenditeUltimoMese, StringFormat='+€{0:N0} Questo Mese', Mode=OneWay}" 
                                       Style="{StaticResource StatSubtitleStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- CONTENUTO PRINCIPALE -->
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TOP IMMOBILI -->
                <Border Grid.Column="0" Style="{StaticResource ContentCardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="🏆" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Top Immobili per Performance" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>

                        <Border Background="{StaticResource BackgroundBrush}" 
                                CornerRadius="8" 
                                Padding="16">
                            <DataGrid ItemsSource="{Binding TopImmobili}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      RowBackground="Transparent"
                                      AlternatingRowBackground="#FAFAFA"
                                      MaxHeight="250">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="8,12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource DividerBrush}"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="8,8"/>
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Immobile" 
                                                        Binding="{Binding Titolo}"
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Medium"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Prezzo" 
                                                        Binding="{Binding Prezzo, StringFormat='€ {0:N0}'}"
                                                        Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Visite" 
                                                        Binding="{Binding NumeroVisite}"
                                                        Width="60"/>
                                    <DataGridTextColumn Header="Interessati" 
                                                        Binding="{Binding NumeroInteressati}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <Button Content="🏠 Vai agli Immobili" 
                                Command="{Binding VaiAImmobiliCommand}"
                                Style="{StaticResource ModernButtonPrimary}"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <!-- SIDEBAR CONTENT -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0">

                    <!-- ATTIVITÀ RECENTI -->
                    <Border Style="{StaticResource ContentCardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📈" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Attività Recenti" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding AttivitaRecenti}" MaxHeight="300">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}" 
                                                CornerRadius="8" 
                                                Padding="12,10" 
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" 
                                                        Background="{StaticResource PrimaryLightBrush}"
                                                        CornerRadius="6"
                                                        Width="32" Height="32"
                                                        Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Icona}" 
                                                               FontSize="14" 
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Descrizione}" 
                                                               FontWeight="Medium"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding DataOra, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- PROSSIMI APPUNTAMENTI -->
                    <Border Style="{StaticResource ContentCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Prossimi Appuntamenti" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding ProssimiAppuntamenti}" MaxHeight="250">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource WarningLightBrush}" 
                                                CornerRadius="8" 
                                                Padding="12,10" 
                                                Margin="0,0,0,8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Titolo}" 
                                                           FontWeight="Medium"
                                                           FontSize="13"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           Margin="0,0,0,4"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding DataOra, StringFormat='{}{0:dd/MM HH:mm}'}" 
                                                               FontSize="11"
                                                               Foreground="{StaticResource TextMutedBrush}"/>
                                                    <Border Grid.Column="1"
                                                            Background="{StaticResource WarningBrush}"
                                                            CornerRadius="4"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Tipo}" 
                                                                   FontSize="10"
                                                                   FontWeight="Medium"
                                                                   Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Button Content="📅 Vai agli Appuntamenti" 
                                    Command="{Binding VaiAAppuntamentiCommand}"
                                    Style="{StaticResource ModernButtonPrimary}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>