<UserControl x:Class="ImmobiGestio.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Padding="0" 
                  Background="{DynamicResource BackgroundBrush}">
        <StackPanel Margin="0,0,0,40">

            <!-- HEADER SECTION -->
            <Border Background="{DynamicResource SurfaceBrush}" 
                    Padding="32,24" 
                    Margin="0,0,0,24"
                    Effect="{DynamicResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Dashboard" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Panoramica delle tue attività immobiliari" 
                               FontSize="16" 
                               Foreground="{DynamicResource TextSecondary}"/>
                </StackPanel>
            </Border>

            <!-- QUICK ACTIONS -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,32">
                <Button Content="+ Nuovo Immobile" 
                        Command="{Binding NuovoImmobileCommand}" 
                        Style="{DynamicResource ModernButtonPrimary}" 
                        Margin="0,0,15,0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"/>
                <Button Content="+ Nuovo Cliente" 
                        Command="{Binding NuovoClienteCommand}" 
                        Style="{DynamicResource ModernButtonPrimary}" 
                        Margin="0,0,15,0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"/>
                <Button Content="+ Nuovo Appuntamento" 
                        Command="{Binding NuovoAppuntamentoCommand}" 
                        Style="{DynamicResource ModernButtonPrimary}"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"/>
            </StackPanel>

            <!-- STATISTICHE PRINCIPALI -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="📊 Statistiche Principali" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="16,0,0,16"
                           Foreground="{DynamicResource TextPrimary}"/>

                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- IMMOBILI CARD -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24,20"
                            Margin="8"
                            BorderThickness="0,0,0,4"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <Border Width="48" Height="48" 
                                    CornerRadius="12" 
                                    Background="{DynamicResource PrimaryLightBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <TextBlock Text="🏠" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.TotaleImmobili}" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Immobili Totali" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Statistiche.ImmobiliDisponibili, StringFormat='{}{0} disponibili'}" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- CLIENTI CARD -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24,20"
                            Margin="8"
                            BorderThickness="0,0,0,4"
                            BorderBrush="{DynamicResource SuccessBrush}"
                            Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <Border Width="48" Height="48" 
                                    CornerRadius="12" 
                                    Background="{DynamicResource SuccessLightBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <TextBlock Text="👥" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.TotaleClienti}" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource SuccessBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Clienti Totali" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Statistiche.ClientiAttivi, StringFormat='{}{0} attivi'}" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- APPUNTAMENTI CARD -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24,20"
                            Margin="8"
                            BorderThickness="0,0,0,4"
                            BorderBrush="{DynamicResource WarningBrush}"
                            Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <Border Width="48" Height="48" 
                                    CornerRadius="12" 
                                    Background="{DynamicResource WarningLightBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <TextBlock Text="📅" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.AppuntamentiOggi}" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource WarningBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Oggi" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Statistiche.AppuntamentiProssimaSettimana, StringFormat='{}{0} questa settimana'}" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource WarningBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- VENDITE CARD -->
                    <Border Grid.Column="3" 
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="24,20"
                            Margin="8"
                            BorderThickness="0,0,0,4"
                            BorderBrush="{DynamicResource PurpleBrush}"
                            Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <Border Width="48" Height="48" 
                                    CornerRadius="12" 
                                    Background="{DynamicResource PurpleLightBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16">
                                <TextBlock Text="💰" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Statistiche.ValoreVenditeUltimoMese, StringFormat='{}{0:C0}'}" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource PurpleBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Incassi Mese" 
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Statistiche.ImmobiliVenduti, StringFormat='{}{0} venduti'}" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{DynamicResource PurpleBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- CONTENUTO PRINCIPALE -->
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PANNELLO SINISTRO - ATTIVITÀ RECENTI -->
                <Border Grid.Column="0" 
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="24"
                        Margin="0,0,16,0"
                        Effect="{DynamicResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="📈" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Attività Recenti" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding AttivitaRecenti}" MaxHeight="400">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource BackgroundBrush}" 
                                            CornerRadius="8" 
                                            Padding="16,12" 
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                    Background="{DynamicResource PrimaryLightBrush}"
                                                    CornerRadius="6"
                                                    Width="32" Height="32"
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Icona}" 
                                                           FontSize="14" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Descrizione}" 
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimary}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Tipo}" 
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextSecondary}"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Data, StringFormat='{}{0:dd/MM HH:mm}'}" 
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextMuted}"
                                                       VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- PANNELLO DESTRO - PROSSIMI APPUNTAMENTI -->
                <Border Grid.Column="1" 
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="24"
                        Effect="{DynamicResource CardShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="📅" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Prossimi Appuntamenti" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding ProssimiAppuntamenti}" MaxHeight="400">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource BackgroundBrush}" 
                                            CornerRadius="8" 
                                            Padding="16,12" 
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Titolo}" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextPrimary}"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Inizio, StringFormat='{}{0:HH:mm}'}" 
                                                           FontSize="12" 
                                                           Foreground="{DynamicResource AccentBrush}"
                                                           FontWeight="SemiBold"/>
                                            </Grid>
                                            <TextBlock Text="{Binding ClienteNome}" 
                                                       FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondary}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="📅 Vai agli Appuntamenti" 
                                Command="{Binding VaiAAppuntamentiCommand}"
                                Style="{DynamicResource ModernButtonSecondary}"
                                HorizontalAlignment="Stretch"
                                Margin="0,16,0,0"
                                Padding="12,8"/>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>