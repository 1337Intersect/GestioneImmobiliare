<UserControl x:Class="ImmobiGestio.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFEEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2196F3"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="📊 Dashboard" FontSize="32" FontWeight="Bold" Foreground="#FF2196F3"/>
                <TextBlock Text="Panoramica generale del sistema" 
                           FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Statistiche Principali -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Immobili -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏠" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Statistiche.TotaleImmobili}" Style="{StaticResource StatNumberStyle}"/>
                        <TextBlock Text="Immobili Totali" Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Text="{Binding Statistiche.ImmobiliDisponibili, StringFormat='{}{0} disponibili'}" 
                                   FontSize="12" Foreground="Green" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Clienti -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Statistiche.TotaleClienti}" Style="{StaticResource StatNumberStyle}"/>
                        <TextBlock Text="Clienti Totali" Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Text="{Binding Statistiche.ClientiAttivi, StringFormat='{}{0} attivi'}" 
                                   FontSize="12" Foreground="Green" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Appuntamenti Oggi -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📅" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Statistiche.AppuntamentiOggi}" Style="{StaticResource StatNumberStyle}"/>
                        <TextBlock Text="Appuntamenti Oggi" Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Text="{Binding Statistiche.AppuntamentiProssimaSettimana, StringFormat='{}{0} prossima settimana'}" 
                                   FontSize="12" Foreground="Orange" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Valore Portafoglio -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Statistiche.ValoreTotalePortafoglio, StringFormat='€ {0:N0}'}" 
                                   Style="{StaticResource StatNumberStyle}" FontSize="24"/>
                        <TextBlock Text="Valore Portafoglio" Style="{StaticResource StatLabelStyle}"/>
                        <TextBlock Text="{Binding Statistiche.TicketMedio, StringFormat='Ticket medio: € {0:N0}'}" 
                                   FontSize="12" Foreground="Purple" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Performance Indicators -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding IndicatoreVendite}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ProgresoVendite}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF4CAF50" HorizontalAlignment="Center"/>
                        <TextBlock Text="Tasso di Vendita" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding IndicatoreAttivita}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Statistiche.MediaAppuntamentiGiornalieri}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FFFF9800" HorizontalAlignment="Center"/>
                        <TextBlock Text="Media Appuntamenti/Giorno" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding ProgresoClienti}" FontSize="24" FontWeight="Bold" 
                                   Foreground="#FF9C27B0" HorizontalAlignment="Center"/>
                        <TextBlock Text="Clienti Attivi" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                        <Button Content="📊 Vai ai Clienti" Command="{Binding VaiAClientiCommand}" 
                                Background="#FF9C27B0" Foreground="White" BorderThickness="0" 
                                Padding="10,5" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts and Recent Activity -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Charts Area -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Vendite Chart -->
                    <Border Style="{StaticResource StatCardStyle}" Height="300">
                        <StackPanel>
                            <TextBlock Text="📈 Vendite Mensili" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#FFF5F5F5" Height="250" CornerRadius="4">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                                    <TextBlock Text="Grafico Vendite" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock Text="(In sviluppo)" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Tipologie Chart -->
                    <Border Style="{StaticResource StatCardStyle}" Height="300" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="🥧 Distribuzione Tipologie" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border Background="#FFF5F5F5" Height="250" CornerRadius="4">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="🍕" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                                    <TextBlock Text="Grafico Tipologie" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
                                    <TextBlock Text="(In sviluppo)" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Activity and Quick Actions -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Recent Activity -->
                    <Border Style="{StaticResource StatCardStyle}" Height="300">
                        <StackPanel>
                            <TextBlock Text="📋 Attività Recenti" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding AttivitaRecenti}" BorderThickness="0" 
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" Height="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="{Binding Icona}" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Descrizione}" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding Data, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                                           FontSize="10" Foreground="Gray"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Top Immobili -->
                    <Border Style="{StaticResource StatCardStyle}" Height="250" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="🏆 Top Immobili" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox ItemsSource="{Binding TopImmobili}" BorderThickness="0" 
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" Height="190">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="{Binding Titolo}" FontWeight="Bold" FontSize="12"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding NumeroVisite, StringFormat='{}{0} visite'}" 
                                                           FontSize="10" Foreground="Blue" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding NumeroInteressati, StringFormat='{}{0} interessati'}" 
                                                           FontSize="10" Foreground="Green"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Style="{StaticResource StatCardStyle}" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="⚡ Azioni Rapide" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Button Content="➕ Nuovo Immobile" Command="{Binding NuovoImmobileCommand}" 
                                    Background="#FF2196F3" Foreground="White" BorderThickness="0" 
                                    Padding="10,8" Margin="0,5" HorizontalAlignment="Stretch"/>
                            <Button Content="👤 Nuovo Cliente" Command="{Binding NuovoClienteCommand}" 
                                    Background="#FF4CAF50" Foreground="White" BorderThickness="0" 
                                    Padding="10,8" Margin="0,5" HorizontalAlignment="Stretch"/>
                            <Button Content="📅 Nuovo Appuntamento" Command="{Binding NuovoAppuntamentoCommand}" 
                                    Background="#FFFF9800" Foreground="White" BorderThickness="0" 
                                    Padding="10,8" Margin="0,5" HorizontalAlignment="Stretch"/>
                            <Button Content="🔄 Aggiorna Dati" Command="{Binding RefreshCommand}" 
                                    Background="#FF607D8B" Foreground="White" BorderThickness="0" 
                                    Padding="10,8" Margin="0,5" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>